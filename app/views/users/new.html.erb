<h1 class="title">Sign up</h1>
<div class="columns">
  <div class="column is-one-third">
    <%= form_for @user, url: signup_path, class: 'form' do |form| %>
      <div class="field">
        <%= form.label :email, class: 'label' %>
        <div class="control has-icons-left">
          <%= form.email_field :email, class: 'input', required: true %>
          <span class="icon is-small is-left">
            <i class="fa fa-envelope"></i>
          </span>
        </div>
      </div>
      <div class="field">
        <%= form.label :password, class: 'label' %>
        <div class="control has-icons-left">
          <%= form.password_field :password, class: 'input', required: true %>
          <span class="icon is-small is-left">
            <i class="fa fa-key"></i>
          </span>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= form.submit 'Create', class: 'button is-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
