<h1 class="title">Sign up</h1>
<div class="columns">
  <div class="column is-one-third">
    <%= form_for @user, url: signup_path, class: 'form' do |form| %>
      <div class="field">
        <%= form.label :name, class: 'label' %>
        <div class="control">
          <%= form.text_field :name, class: 'input', required: true %>
        </div>
      </div>
      <div class="field">
        <%= form.label :email, class: 'label' %>
        <div class="control">
          <%= form.email_field :email, class: 'input', required: true %>
        </div>
      </div>
      <div class="field">
        <%= form.label :password, class: 'label' %>
        <div class="control">
          <%= form.password_field :password, class: 'input', required: true %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= form.submit 'Sign up', class: 'button is-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
